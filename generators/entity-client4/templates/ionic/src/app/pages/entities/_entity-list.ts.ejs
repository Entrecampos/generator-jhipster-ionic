import { MainService } from 'src/app/services/main/main.service';
import { Component } from '@angular/core';
import { NavController, ToastController, Platform, IonItemSliding } from '@ionic/angular';
import { filter, map } from 'rxjs/operators';
import { HttpResponse, HttpErrorResponse, HttpHeaders } from '@angular/common/http';
<%_ if (fieldsContainBlob) { _%>
import { JhiDataUtils } from 'ng-jhipster';
<%_ } _%>
import { <%= entityAngularName %> } from './<%= entityFileName %>.model';
import { <%= entityAngularName %>Service } from './<%= entityFileName %>.service';
import { environment } from 'src/environments/environment';

@Component({
    selector: 'page-<%= entityFileName %>-list',
    templateUrl: '<%= entityFileName %>-list.html',
    styleUrls: ['../entities.page.scss']
})
export class <%= entityAngularName %>ListPage {
    <%= entityInstancePlural %>: <%= entityAngularName %>[];
    itemsPerPage: number;
    page = 0;
    totalItems: number;
    <%=entityInstance %>Active = true;

    ERROR_LOAD = 'Failed to load data';

    constructor(
<%_ if (fieldsContainBlob) { _%>
        private dataUtils: JhiDataUtils,
<%_ } _%>
        private mainService: MainService,
        private navController: NavController,
        private <%= entityInstance %>Service: <%= entityAngularName %>Service,
        private toastCtrl: ToastController,
        public plt: Platform
    ) {
        this.<%= entityInstancePlural %> = [];
         this.itemsPerPage = environment.ITEMS_PER_PAGE;
    }

    ionViewWillEnter() {
        this.loadAll();
    }

<%_ if (!fieldsContainActive) { _%>
    loadAll(predicate = 'id', reverse = true) {
        this.<%= entityInstance %>Service.query({
                page: this.page,
                size: this.itemsPerPage,
                sort: this.sort(predicate, reverse)
            }).subscribe(
                (res: HttpResponse<<%= entityAngularName %>[]>) => this.paginate(res.body, res.headers),
                (res: HttpErrorResponse) => console.log('LoadError:', res.message)
            );
    }

   sort(predicate, reverse) {
        const result = [predicate + ',' + (reverse ? 'asc' : 'desc')];
        if (predicate !== 'id') {
            result.push('id');
        }
        console.log(result);
        return result;
    }

    reset() {
        this.page = 0;
        this.<%= entityInstancePlural %> = [];
        this.loadAll();
    }

    loadPage(page) {
        this.page = page;
        this.loadAll();
    }

    protected paginate(data: <%= entityAngularName %>[], headers: HttpHeaders) {
        this.<%= entityInstancePlural %> = data;
        this.totalItems = parseInt(headers.get('X-Total-Count'), 10);
    }
    <%_ } _%>

<%_ if (fieldsContainActive) { _%>
    // Loading only Active or Inactive according to <%= entityInstance %>Active value
    loadAll(refresher?) {
        this.<%= entityInstance %>Service.queryByDomainId(this.mainService.DOMAIN.id, this.<%= entityInstance %>Active).subscribe(
       // this.<%= entityInstance %>Service.queryByTenantId(this.mainService.TENANT.id, this.<%= entityInstance %>Active).subscribe(
       // this.<%= entityInstance %>Service.queryActive(this.<%= entityInstance %>Active).subscribe(
            (res) => {
                this.<%= entityInstancePlural %> = res;
                if (refresher !== undefined) {
                    if (refresher.type === 'ionRefresh') { refresher.target.complete(); }
                }
            },
            (error) => {
                console.error(error);
                this.presentToast(this.ERROR_LOAD);
            });
    }
    sort(field, asc) {
        this.<%= entityInstancePlural %> = asc ? this.<%= entityInstancePlural %>.sort((a, b) => a[field].localeCompare(b[field])) :
            this.<%= entityInstancePlural %>.sort((a, b) => b[field].localeCompare(a[field]));
    }
    <%_ } _%>

    // Object.keys for getting all property names of the object,
    // Array.some for iterating the keys and exit loop if found,
    search(ev: any) {
        const val = ev.target.value;
        if (val && val.trim() !== '') {
            this.<%= entityInstancePlural %> = this.<%= entityInstancePlural %>.filter(o =>
                Object.keys(o).some(k => String(o[k]).toLowerCase().includes(val.toLowerCase())));
        } else {
            this.loadAll();
        }
    }

<%_ if (fieldsContainActive) { _%>
    chgActive(id,active) {
        this.<%= entityInstance %>Service.chgActive(id, active);
    }
<%_ } _%>

<%_ if (fieldsContainBlob) { _%>
    byteSize(field) {
        return this.dataUtils.byteSize(field);
    }
    openFile(contentType, field) {
        return this.dataUtils.openFile(contentType, field);
    }
<%_ } _%>

    async presentToast(text) {
        const toast = await this.toastCtrl.create({ message: text, duration: 3000, position: 'middle' });
        toast.present();
    }

}
