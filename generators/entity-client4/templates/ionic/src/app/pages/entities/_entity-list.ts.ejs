import { Component, OnInit } from '@angular/core';
import { ToastController } from '@ionic/angular';
import { HttpResponse, HttpErrorResponse, HttpHeaders } from '@angular/common/http';
import { environment } from 'src/environments/environment';

import { <%= entityAngularName %> } from './<%= entityFileName %>.model';
import { EntityService } from '../entity.service';
import { NmsDomain } from '../nms-domain';

<%_ if (TopClass ) { _%>
import { <%= TopClass %> } from './../../../services/login.service';
<%_ } _%>
import { <%=entityInstance%>Url } from './../entity.service';

@Component({
    selector: 'page-<%= entityFileName %>',
    templateUrl: '<%= entityFileName %>.html',
    styleUrls: ['../entities-list.page.scss']
})
export class <%= entityAngularName %>Page implements OnInit {

    topClassId: number;
    <%=entityInstancePlural%>: <%= entityAngularName %>[];
    <%=entityInstance%>Active = true;

    itemsPerPage: number;
    page = 0;
    totalItems: number;
    sortOrd = null;
    searchItem = null;

    ERROR_LOAD = 'Failed to load data';
    loading = 'Loading ...';

    constructor(
        private entityService: EntityService,
        private toastCtrl: ToastController) {
        this.<%= entityInstancePlural %> = [];
        this.itemsPerPage = environment.ITEMS_PER_PAGE;
    }

    ngOnInit() {
        <%=TopClass%>.subscribe(res => {
            if (res !== null) {
                this.topClassId = res.id;
                this.loadAll();
            }
        });
    }

    init(event?) {
        this.page = 0;
        this.<%=entityInstancePlural%> = [];
        this.loadAll(event);
    }

    // Loading only Active or Inactive according to <%= entityInstance %>Active value
    loadAll(event?) {
        this.loading = 'Loading ...';
        this.entityService.queryBy<%=TopClass%>(<%=entityInstance%>Url, this.topClassId,  {
                page: this.page,
                size: this.itemsPerPage,
                sort: this.sortOrd,
                name: this.searchItem
            }, this.<%=entityInstance%>Active).subscribe(
            (res: HttpResponse<<%=entityAngularName%>[]>) => {
                this.paginate(res.body, res.headers);
                if (event) { event.target.complete(); }
                this.loading = '';
            },
            (err: HttpErrorResponse) => {
                console.log('LoadError:', err.message);
                if (event) { event.target.complete(); }
                this.loading = '';
            }
        );
    }

    loadMore(event) {
        this.page++;
        this.loadAll(event);
        if (this.<%=entityInstancePlural%>.length === this.totalItems) { event.target.disabled = true;  }
    }

    paginate(data: <%=entityAngularName%>[], headers: HttpHeaders) {
        if (this.page === 0) { this.<%=entityInstancePlural%> = data; } else { this.<%=entityInstancePlural%> = this.<%=entityInstancePlural%>.concat(data); }
        this.totalItems = +headers.get('X-Total-Count');
    }
    
    sort(predicate, reverse) {
        this.sortOrd = [predicate + ',' + (reverse ? 'asc' : 'desc')];
        this.init();
    }

    search(ev: any) { // By name if more fields needed an idea could be name containing those fields joined
        this.searchItem = ev.target.value;
        if (this.searchItem && this.searchItem.trim() !== '') { this.searchItem = '%' + this.searchItem + '%'; }
        else { this.searchItem = null; }
        this.init();
    }

    chgActive(id,active) {
        this.entityService.chgActive(<%=entityInstance%>Url, id, active).subscribe(res => {
            console.log(res);
            this.loadAll();
        },
        (error) => {
            console.error(error);
            this.presentToast(this.ERROR_LOAD);
        });
        this.init();
    }

    async presentToast(text) {
        const toast = await this.toastCtrl.create({ message: text, duration: 3000, position: 'middle' });
        toast.present();
    }

}
